--// Blox Fruits Full Hack Script
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/hiepok99/bbbb/refs/heads/main/bbb"))()
local Window = Library:CreateWindow("Blox Fruits HUB")

--// Auto Farm
local AutoFarmTab = Window:CreateTab("Auto Farm")
AutoFarmTab:CreateToggle("Auto Farm Level", function(state)
    _G.AutoFarm = state
    while _G.AutoFarm do
        -- Code Auto Farm Level
        task.wait()
    end
end)

